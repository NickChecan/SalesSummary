context Sales {

	type Region {
		name: String(100);
		subRegion: String(100);
	};
	
	entity Header {
		key id: Integer generated by default as identity (start with 1000000001 increment by 1);
		region: Region;
		@Comment : 'Creation Date'
		date: LocalDate not null;
		items: Association[*] to Item on items.header.id = id;
	};
	
	entity Item {
		key header: Association to Header;
		key id: Integer;
		amount: Decimal(10,2) not null;
		currency: String(3);
	};
	
};